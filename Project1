#include <iostream>
#include <fstream>
#include <stdio.h>
#include "data.txt"
using namespace std;


struct Person
{
char Name[20];
float balance;
};

void Display(Person P[],int n)
{
  std::ifstream hello;
  hello.open("data.txt");
  
  for(int i =1; i<n+1; i++)
  {
  std::cout<<P[i].Name << P[i].balance;
  }
  hello.close();
 
 /*  
   if(hello.is_open())
   {
    while( hello >> ok.Name>>ok.balance)
    {
      std::cout<<ok.Name<<""<<ok.balance;
    }
*/    
}

void FindRichest(Person P[], int n)
{
  for(int i=0; i<n; i++)
  {
    if(P[i].balance !=-1)
    {
      P[i].balance = P[n].balance;
  
    }
  }
  
  
}


int main()
{
  std::ifstream hello;
  hello.open("data.txt");
  Person ok;
  int entry = 0;
  
  while(!hello.eof())
      {
        hello>>ok.Name>>ok.balance;
        hello.getline(ok.Name, ok.balance);
       entry++;
      }
  hello.close();
  int n = entry;

  Person P[n];
  
  Display(P,n);
   
  FindRichest(P,n);
}

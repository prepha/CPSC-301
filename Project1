#include <iostream>
#include <fstream>
#include <stdio.h>
#include <string>
#include <string.h>
#include <cstring>

using namespace std;

struct Person
{
char Name[20];
float balance;
};


void Display(Person P[],int n)
{
  std::ifstream hello;
  hello.open("data.txt");
 
 string name1;
 string name2;
 string sname;
 float num;

 Person ok;
  for(int i =0; i<n; i++)
  {
    hello>>name1;
    hello>>name2;
   
    hello>>num;
    
    sname = name1 + " " + name2;
    
    strcpy(P[i].Name,sname.c_str());
    P[i].balance=num;
    cout<<P[i].Name;
    cout<<P[i].balance<<endl;
  
  
  }
  hello.close();  
}

void FindRichest(Person P[], int n)
{
  std::ifstream hello;
  hello.open("data.txt");

  float balance =0.0;
  
  for(int i=0; i<n; i++)
  {
    if(balance <P[i].balance)
    {
      balance=P[i].balance;
    }
  }

  for(int i =0; i<n; i++)
  {
    if(balance ==P[i].balance)
    {
      cout<<"Person with  "<<P[i].Name<<endl;
    }
  }

  hello.close();
}


void Deposit(std::string CustName, Person P[],int n)
{
 std::ifstream hello;

  int deposit = 0;
  for(int i=0; i<n; ++i)
 {
  cout<<"Enter Full name to deposit:";
  hello.getline(P[i].Name,20);
  cout<<"How much would you like to deposit";
  hello>>deposit;
  P[i].balance+=deposit;
  cout<<"Now your new balance is:"<<P[i].balance;

 }
}

int main()
{
  
  std::ifstream hello;
  hello.open("data.txt");
  Person ok;
  int entry = 0;
   while(!hello.eof())    //while(hello>>ok.Name)
      {
      hello>>ok.Name;
      hello.getline(ok.Name, 20);
  
       entry++;
      }
int n =entry;


//cout<<"The counter is :"<<n<<endl;
 Person P[n];

  std::string CustName;
  Display(P,n);
    FindRichest(P,n);
  Deposit(CustName,P,n);


}

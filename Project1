#include <iostream>
#include <fstream>
#include <stdio.h>
#include "data.txt"
using namespace std;


struct Person
{
char Name[20];
float balance;
};

void Display(int PersonP[],int n)
{
  Person ok;
  std::ifstream hello;
  hello.open("data.txt");
  
  for(int i =1; i<n+1; i++)
  {
  std::cout<<PersonP[i]<< ok.Name << ok.balance << std::endl;
  }
  hello.close();
 
 /*  
   if(hello.is_open())
   {
    while( hello >> ok.Name>>ok.balance)
    {
      std::cout<<ok.Name<<""<<ok.balance;
    }
*/    
}

void FindRichest(int PersonP[], int n)
{
Person ok;


  for(int i=0; i<n; i++)
  {
    if(PersonP[i] != ok.balance)
    {
      PersonP[i] = ok.balance;
      ok.balance = PersonP[i];
    }
  }
  
  
}


int main()
{
  std::ifstream hello;
  hello.open("data.txt");
  Person ok;
  int entry = 0;
  
  while(!hello.eof())
      {
        hello>>ok.Name>>ok.balance;
        hello.getline(ok.Name, ok.balance);
       entry++;
      }
  hello.close();
  int n = entry;

 
  int PersonP[n];

  Person P[n];


  Display(PersonP,n);
  FindRichest(PersonP,n);
}

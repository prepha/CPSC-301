#include <iostream>
#include <fstream>
#include <stdio.h>
#include <string>
#include <string.h>



using namespace std;


struct Person
{
char Name[20];
float balance;
};


void Display(Person P[],int n)
{
  std::ifstream hello;
  hello.open("data.txt");
  
  for(int i =1; i<n+1; i++)
  {
  std::cout<<P[i].Name << P[i].balance;
  }
  hello.close();  
}

void FindRichest(Person P[], int n)
{
  int i;
  float richest = 0.0;
  for(i=0; i<n; i++)
  {
    if(P[i].balance > richest)
    {
      richest = P[i].balance;
    }
  }
  std::cout<<"The user with maximum balance is"<<richest <<P[i].Name;
}

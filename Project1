};


void Display(Person P[],int n)
{
  std::ifstream hello;
  hello.open("data.txt");
  Person ok;

   
  for(int i =0; i<n; i++)
  {
    

    //hello.get(P[i].Name, n);
    hello.getline(P[i].Name,30);
    //hello>>P[i].Name;

    //hello.ignore(20,'\0');
    
   //hello.getline(P[i].Name, 20);
    cout<<P[i].Name;
    

  //std::cout<<P[i].Name << P[i].balance;
  
  }
  hello.close();  
}

void FindRichest(Person P[], int n)
{
  int i;
  float richest = 0.0;
  for(i=0; i<n; i++)
  {
    if(P[i].balance > richest)
    {
      richest = P[i].balance;
    }
  }
  std::cout<<"The user with maximum balance is"<<richest <<P[i].Name;
}

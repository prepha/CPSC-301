using namespace std;

struct Person
{
char Name[20];
float balance;
};


void Display(Person P[],int n)
{
  std::ifstream hello;
  hello.open("data.txt");
 
 string name1;
 string name2;
 string sname;
 float num;

 Person ok;
  for(int i =0; i<n; i++)
  {
    hello>>name1;
    hello>>name2;
   
    hello>>num;
    
    sname = name1 + " " + name2;
    
    strcpy(P[i].Name,sname.c_str());
    P[i].balance=num;
    cout<<P[i].Name;
    cout<<P[i].balance<<endl;
  }
  hello.close();  
}

void FindRichest(Person P[], int n)
{
  std::ifstream hello;
  hello.open("data.txt");

  float balance =0.0;
  
  for(int i=0; i<n; i++)
  {
    if(balance <P[i].balance)
    {
      balance=P[i].balance;
    }
  }

  for(int i =0; i<n; i++)
  {
    if(balance ==P[i].balance)
    {
      cout<<"Person with highest value is "<<P[i].Name<<endl;
    }
  }

  hello.close();
}


